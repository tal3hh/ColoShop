@model (BlogCreateDto blogcreate,List<BlogDto> bloglist)
@using ServiceLayer.DTOs.Blog
@{ 
    int count = 1;
}
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blog's Create</h4>
                <form asp-action="Create" asp-controller="Blog" asp-area="AdminPanel" class="form-sample" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Basliq :</label>
                                <div class="col-sm-9">
                                    <input asp-for="blogcreate.Title" class="form-control" />
                                    <span asp-validation-for="blogcreate.Title" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Yazici :</label>
                                <div class="col-sm-9">
                                    <input asp-for="blogcreate.ByName" class="form-control" />
                                    <span asp-validation-for="blogcreate.ByName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="blogcreate.Photo" class="col-sm-3 col-form-label">Foto :</label>
                                <div class="col-sm-9">
                                    <input asp-for="blogcreate.Photo" class="form-control" id="exampleInputEmail2">
                                    <span asp-validation-for="blogcreate.Photo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>                       
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Haqqinda :</label>
                                <div class="col-sm-9">
                                    <textarea asp-for="blogcreate.Description" class="form-control" id="exampleTextarea1" rows="2"></textarea>
                                    <span asp-validation-for="blogcreate.Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success mr-2">Submit</button>
                    <a asp-action="BlogList" asp-controller="Blog" asp-area="AdminPanel" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blog List</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Foto
                                </th>
                                <th>
                                    Basliq
                                </th>
                                <th>
                                    Haqqinda
                                </th>
                                <th>
                                    Yazar
                                </th>
                                <th>
                                    Tarix
                                </th>
                                <th>
                                    EDIT
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var blog in Model.bloglist.Take(5))
                            {
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td class="py-1">
                                    <img src="~/AdminPanel/img/blog/@blog.Image" class="mr-2" alt="image">
                                </td>
                                <td>
                                    @blog.Title
                                </td>
                                <td style="width: 50%">
                                    @blog.Description
                                </td>
                                <td>
                                    @blog.ByName
                                </td>
                                <td>
                                    @blog.CreateDate.ToString("dd MMM, yyyy")
                                </td>
                                <td>
                                    <a asp-action="Update" asp-controller="Blog" asp-area="AdminPanel" asp-route-id="@blog.Id"><i class="bi bi-pencil-square"></i></a>
                                    <a asp-action="Delete" asp-controller="Blog" asp-area="AdminPanel" asp-route-id="@blog.Id"><i class="bi bi-x-square"></i></a>
                                </td>
                            </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>