@model (BlogUpdateDto blogupdate, BlogDto blogdto)
@using ServiceLayer.DTOs.Blog

<div class="row">

    @* Blog Update *@
    <div class="col-md-5 grid-margin stretch-card">
        <div class="card">
            <div class="card-body d-flex flex-column">
                <h4 class="card-title">Blog's Update</h4>
                <form asp-action="Update" asp-controller="Blog" asp-area="AdminPanel" class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label asp-for="blogupdate.Title" class="col-sm-3 col-form-label">Basliq :</label>
                        <div class="col-sm-9">
                            <input asp-for="blogupdate.Title" class="form-control" id="exampleInputEmail2">
                            <span asp-validation-for="blogupdate.Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="blogupdate.ByName" class="col-sm-3 col-form-label">Kim Terefinden :</label>
                        <div class="col-sm-9">
                            <input asp-for="blogupdate.ByName" class="form-control" id="exampleInputEmail2">
                            <span asp-validation-for="blogupdate.ByName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="blogupdate.Description" class="col-sm-3 col-form-label">Haqqinda :</label>
                        <div class="col-sm-9">
                            <input asp-for="blogupdate.Description" class="form-control" id="exampleInputEmail2">
                            <span asp-validation-for="blogupdate.Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="blogupdate.Photo" class="col-sm-3 col-form-label">Foto :</label>
                        <div class="col-sm-9">
                            <input asp-for="blogupdate.Photo" class="form-control" id="exampleInputEmail2">
                            <span asp-validation-for="blogupdate.Photo" class="text-danger"></span>
                        </div>
                    </div>
                    <input asp-for="blogupdate.Id" type="hidden">
                    <button type="submit" class="btn btn-success mr-2">Submit</button>
                    <a asp-action="BlogList" asp-controller="Blog" asp-area="AdminPanel" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>

    @* Blog Detail *@
    <div class="col-md-7 grid-margin stretch-card">
        <div class="card">
            <div class="card-body d-flex flex-column">
                <h4 class="card-title">Blog's Detail</h4>
                <form class="forms-sample">
                    <div class="form-group row">
                        <label asp-for="blogdto.Title" class="col-sm-3 col-form-label">Basliq.</label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.blogdto.Title
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="blogdto.ByName" class="col-sm-3 col-form-label">Kim Teref.</label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.blogdto.ByName
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="blogdto.Description" class="col-sm-3 col-form-label">Haqq.</label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.blogdto.Description
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Foto :</label>
                        <div style="width:15%;height:15%;border-radius:100%;" class="col-sm-9">
                            <img src="~/AdminPanel/img/blog/@Model.blogdto.Image" style="width:15%;height:15%;border-radius:100%;" class="mr-2" alt="image">
                        </div>
                    </div>
                    <a asp-action="BlogList" asp-controller="Blog" asp-area="AdminPanel" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>