@model (List<CategoryDto> Categorylist, CategoryDto Categorydto)
@{ int count = 1; }

<div class="row">
    <div class="col-md-5 grid-margin stretch-card">
        <div class="card">
            <div class="card-body d-flex flex-column">
                <h4 class="card-title">Category's Detail</h4>
                <form class="forms-sample">
                    <div class="form-group row">
                        <label asp-for="@Model.Categorydto.Name" class="col-sm-3 col-form-label">Cins.</label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.Categorydto.Name
                            </p>
                        </div>
                    </div>
                    <a asp-action="Index" asp-controller="Dashboard" asp-area="AdminPanel" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-7 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category List</h4>
                <div class="mt-auto">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Cins.</th>
                                    <th>Tarix</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var CategoryDto in Model.Categorylist)
                                {
                    <tr>
                        <td>@count</td>
                        <td>@CategoryDto.Name</td>
                        <td>@CategoryDto.CreateDate.ToString("MMM dd, yyyy")</td>
                        <td>
                            <a asp-action="Details" asp-controller="Category" asp-area="AdminPanel" asp-route-id="@CategoryDto.Id"><i class="bi bi-card-list"></i></a>
                            <a asp-action="Update" asp-controller="Category" asp-area="AdminPanel" asp-route-id="@CategoryDto.Id"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Delete" asp-controller="Category" asp-area="AdminPanel" asp-route-id="@CategoryDto.Id"><i class="bi bi-x-square"></i></a>
                        </td>
                    </tr>count++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>