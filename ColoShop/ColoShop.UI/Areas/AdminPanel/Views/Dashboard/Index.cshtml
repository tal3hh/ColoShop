@model (List<CategoryDto> categories,List<GenderDto> genders, List<ProductDto> products,List<BlogDto> bloglist)
@using ServiceLayer.DTOs.Product
@using ServiceLayer.DTOs.Blog
@{ 
    int categoryCount = 1;
    int gendeCount = 1;
    int productCount = 1;
    int blogcount = 1;
    
}
<div class="row">
    @* Category *@
    <div class="col-md-7 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4>Kateqoriler</h4>
                <div class="create-btn" style="display:flex; justify-content:flex-end;">
                    <a asp-action="Create" asp-area="AdminPanel" asp-controller="Category" class="btn btn-dribbble">Create</a>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kateqoriya</th>
                                <th>Tarix</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var categoryDto in Model.categories)
                            {
                                <tr>
                                    <td>@categoryCount</td>
                                    <td>@categoryDto.Name</td>
                                    <td>@categoryDto.CreateDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <a asp-action="Details" asp-controller="Category" asp-area="AdminPanel" asp-route-id="@categoryDto.Id"><i class="bi bi-card-list"></i></a>
                                        <a asp-action="Update" asp-controller="Category" asp-area="AdminPanel" asp-route-id="@categoryDto.Id"><i class="bi bi-pencil-square"></i></a>
                                        <a asp-action="Delete" asp-controller="Category" asp-area="AdminPanel" asp-route-id="@categoryDto.Id"><i class="bi bi-x-square"></i></a>
                                    </td>
                                </tr> 
                                categoryCount++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @* Gender *@
    <div class="col-md-5 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4>Cins.ler</h4> 
                <div class="mt-auto">
                    <div class="create-btn" style="display:flex; justify-content:flex-end;">
                        <a asp-action="Create" asp-area="AdminPanel" asp-controller="Gender" class="btn btn-success">Create</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Cins.</th>
                                    <th>Tarix</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var genderDto in Model.genders)
                                {
                    <tr>
                        <td>@gendeCount</td>
                        <td>@genderDto.Name</td>
                        <td>@genderDto.CreateDate.ToString("MMM dd, yyyy")</td>
                        <td>
                            <a asp-action="Details" asp-controller="Gender" asp-area="AdminPanel" asp-route-id="@genderDto.Id"><i class="bi bi-card-list"></i></a>
                            <a asp-action="Update" asp-controller="Gender" asp-area="AdminPanel" asp-route-id="@genderDto.Id"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Delete" asp-controller="Gender" asp-area="AdminPanel" asp-route-id="@genderDto.Id"><i class="bi bi-x-square"></i></a>
                        </td>
                    </tr>
                                    gendeCount++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@* Product List *@
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4>Mehsullar</h4>
                <div class="create-btn" style="display:flex; justify-content:flex-end;">
                    <a asp-action="Create" asp-area="AdminPanel" asp-controller="Product" class="btn btn-facebook">Create</a>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Mehsul</th>
                                <th>Image</th>
                                <th>Gender</th>
                                <th>Kateqor.</th>
                                <th>Qiymet</th>
                                <th>Beden</th>
                                <th>Say</th>
                                <th>Reng</th>
                                <th>EDIT</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var productDto in Model.products.Take(5))
                            {
                <tr>
                    <td>
                        @productCount
                    </td>
                    <td>
                        <label class="badge badge-gradient-warning">@productDto.Name</label>
                    </td>
                    <td class="py-1">
                        <img src="~/AdminPanel/img/product/@productDto.Image" class="mr-2" alt="image">
                    </td>
                    <td>
                        @productDto.GenderName
                    </td>
                    <td>
                        @productDto.CategoryName
                    </td>
                    <td>
                        @productDto.Price $
                    </td>
                    <td>
                        @productDto.Size.ToString()
                    </td>
                    <td>
                        @productDto.Count ed.
                    </td>
                    <td>
                        @productDto.Color.ToString()
                    </td>

                    <td>
                        <a asp-action="Details" asp-controller="Product" asp-area="AdminPanel" asp-route-id="@productDto.Id"><i class="bi bi-card-list"></i></a>
                        <a asp-action="Update" asp-controller="Product" asp-area="AdminPanel" asp-route-id="@productDto.Id"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Delete" asp-controller="Product" asp-area="AdminPanel" asp-route-id="@productDto.Id"><i class="bi bi-x-square"></i></a>
                    </td>
                </tr>
                productCount++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@* Blog List *@
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bloglar</h4>
                <div class="create-btn" style="display:flex; justify-content:flex-end;">
                    <a asp-action="Create" asp-area="AdminPanel" asp-controller="Blog" class="btn btn-github">Create</a>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Foto
                                </th>
                                <th>
                                    Basliq
                                </th>
                                <th>
                                    Haqqinda
                                </th>
                                <th>
                                    Yazar
                                </th>
                                <th>
                                    Tarix
                                </th>
                                <th>
                                    EDIT
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var blog in Model.bloglist.Take(3))
                            {
                                <tr>
                                    <td>
                                        @blogcount
                                    </td>
                                    <td class="py-1">
                                        <img src="~/AdminPanel/img/blog/@blog.Image" class="mr-2" alt="image">
                                    </td>
                                    <td>
                                        @blog.Title
                                    </td>
                                    <td style="width: 50%">
                                        @blog.Description
                                    </td>
                                    <td>
                                        @blog.ByName
                                    </td>
                                    <td>
                                        @blog.CreateDate.ToString("dd MMM, yyyy")
                                    </td>
                                    <td>
                                        <a asp-action="Update" asp-controller="Blog" asp-area="AdminPanel" asp-route-id="@blog.Id"><i class="bi bi-pencil-square"></i></a>
                                        <a asp-action="Delete" asp-controller="Blog" asp-area="AdminPanel" asp-route-id="@blog.Id"><i class="bi bi-x-square"></i></a>
                                    </td>
                                </tr>
                                blogcount++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>