<!DOCTYPE html>
<html lang="en">
<head>
    <title>Colo Shop</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Colo Shop Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/MemberPanel/styles/bootstrap4/bootstrap.min.css">
    <link href="~/MemberPanel/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/MemberPanel/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/MemberPanel/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="~/MemberPanel/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="~/MemberPanel/styles/main_styles.css">
    <link rel="stylesheet" type="text/css" href="~/MemberPanel/styles/responsive.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>

<body>

    <div class="super_container">

        <!-- Header -->

        <header class="header trans_300">

            <!-- Top Navigation -->

            <div class="top_nav">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="top_nav_left">50$-dan yuxarı BÜTÜN SİFARİŞLƏRİ ÜÇÜN ÇATDIRILMA PULSUZDUR</div>
                        </div>
                        <div class="col-md-6 text-right">
                            <div class="top_nav_right">
                                <ul class="top_nav_menu">

                                    <!-- Currency / Language / My Account -->

                                    <li class="currency">
                                        <a asp-action="Index" asp-controller="Home" asp-area="">
                                            azn
                                            
                                        </a>
                                    </li>
                                    <li class="language">
                                        <a asp-action="Index" asp-controller="Home" asp-area="">
                                            Azerbaijan
                                           
                                        </a>
                                    </li>
                                    <li class="account">
                                        @if (!User.Identity.IsAuthenticated)
                                        {
                                            <a asp-action="Index" asp-controller="Home" asp-area="">
                                            My Account
                                            <i class="fa fa-angle-down"></i>
                                            </a>
                                            <ul class="account_selection">
                                                <li><a asp-action="Login" asp-controller="Account" asp-area="">Login</a></li>
                                                <li><a asp-action="Register" asp-controller="Account" asp-area="">Register</a></li>
                                            </ul>
                                        }
                                        else
                                        {
                                            <a asp-action="Index" asp-controller="Home" asp-area="">
                                                @User.Identity.Name
                                            <i class="fa fa-angle-down"></i>
                                            </a>
                                            <ul class="account_selection">
                                                <li><a asp-action="LogOut" asp-controller="Account" asp-area=""><i class="fa fa-sign-out" aria-hidden="true"></i></a></li>
                                            </ul>
                                        }
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Navigation -->

            <div class="main_nav_container">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <div class="logo_container">
                                <a asp-action="Index" asp-controller="Home" asp-area="">colo<span>shop</span></a>
                            </div>
                            <nav class="navbar">
                                <ul class="navbar_menu">
                                    <li><a asp-action="Index" asp-controller="Home" asp-area="">home</a></li>
                                    <li><a asp-action="Index" asp-controller="Shop" asp-area="">shop</a></li>
                                    <li><a asp-action="Index" asp-controller="Contact" asp-area="">contact</a></li>
                                </ul>
                                <ul class="navbar_user">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a asp-action="Index" asp-controller="Dashboard" asp-area="AdminPanel"><i class="fa fa-user" aria-hidden="true"></i></a></li>
                                    }
                                    <li class="checkout">
                                        <a asp-action="Index" asp-controller="Home">
                                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                            <span id="checkout_items" class="checkout_items">2</span>
                                        </a>
                                    </li>
                                </ul>
                                <div class="hamburger_container">
                                    <i class="fa fa-bars" aria-hidden="true"></i>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

        </header>

        @*<div class="fs_menu_overlay"></div>
        <div class="hamburger_menu">
            <div class="hamburger_close"><i class="fa fa-times" aria-hidden="true"></i></div>
            <div class="hamburger_menu_content text-right">
                <ul class="menu_top_nav">
                    <li class="menu_item has-children">
                        <a href="~/MemberPanel/#">
                            My Account
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="menu_selection">
                            <li><a href="~/MemberPanel/#"><i class="fa fa-sign-in" aria-hidden="true"></i>Sign In</a></li>
                            <li><a href="~/MemberPanel/#"><i class="fa fa-user-plus" aria-hidden="true"></i>Register</a></li>
                        </ul>
                    </li>
                    <li class="menu_item"><a href="~/MemberPanel/#">home</a></li>
                    <li class="menu_item"><a href="~/MemberPanel/#">shop</a></li>
                    <li class="menu_item"><a href="~/MemberPanel/#">promotion</a></li>
                    <li class="menu_item"><a href="~/MemberPanel/#">pages</a></li>
                    <li class="menu_item"><a href="~/MemberPanel/#">blog</a></li>
                    <li class="menu_item"><a href="~/MemberPanel/#">contact</a></li>
                </ul>
            </div>
        </div>*@


        @RenderBody()



        <!-- Footer -->

        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="footer_nav_container d-flex flex-sm-row flex-column align-items-center justify-content-lg-start justify-content-center text-center">
                            <ul class="footer_nav">
                                <li><a asp-action="Index" asp-controller="Home" asp-area="">Home</a></li>
                                <li><a asp-action="Index" asp-controller="Shop" asp-area="">Shop</a></li>
                                <li><a asp-action="Index" asp-controller="Contact" asp-area="">Contact us</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="footer_social d-flex flex-row align-items-center justify-content-lg-end justify-content-center">
                            <ul>
                                <li><a asp-action="Index" asp-controller="Home" asp-area=""><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                <li><a href="https://www.linkedin.com/in/taleh-suleymanov-5b1825233/"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                                <li><a href="https://www.instagram.com/tal3hh/"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                                <li><a asp-action="Index" asp-controller="Home" asp-area=""><i class="fa fa-skype" aria-hidden="true"></i></a></li>
                                <li><a asp-action="Index" asp-controller="Home" asp-area=""><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="footer_nav_container">
                            <div class="cr">©2018 All Rights Reserverd. Made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a asp-action="Index" asp-controller="Home" asp-area="">Colorlib</a> &amp; distributed by <a asp-action="Index" asp-controller="Home" asp-area="">ThemeWagon</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

    </div>


    <script src="~/MemberPanel/js/jquery-3.2.1.min.js"></script>
    <script src="~/MemberPanel/styles/bootstrap4/popper.js"></script>
    <script src="~/MemberPanel/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/MemberPanel/plugins/Isotope/isotope.pkgd.min.js"></script>
    <script src="~/MemberPanel/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/MemberPanel/plugins/easing/easing.js"></script>
    <script src="~/MemberPanel/js/custom.js"></script>
</body>

</html>
