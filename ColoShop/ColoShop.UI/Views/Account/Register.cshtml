@model UserCreateDto
@using ServiceLayer.DTOs.Account
@{ Layout = null; }



<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Au Register Forms by Colorlib</title>

    <link href="~/Account/Register/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="~/Account/Register/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="~/Account/Register/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/Account/Register/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/Account/Register/css/main.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">ColoShop Registration</h2>
                    <div asp-validation-summary="All" style="color:red">

                    </div>
                    <form asp-action="Register" asp-controller="Account" method="post">
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Username</label>
                                    <input class="input--style-4" type="text" asp-for="Username">
                                    <span asp-validation-for="Username" style="color:red"></span>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">E-mail</label>
                                    <input class="input--style-4" type="email" asp-for="Email">
                                    <span asp-validation-for="Email" style="color:red"></span>
                                </div>
                            </div>
                            
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Password</label>
                                    <input class="input--style-4" type="password" asp-for="Password">
                                    <span asp-validation-for="Password" style="color:red"></span>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">ConfrimPassword</label>
                                    <input class="input--style-4" type="password" asp-for="ConfrimPassword">
                                    <span asp-validation-for="ConfrimPassword" style="color:red"></span>
                                </div>
                            </div>
                        </div>
                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--green" type="submit">Submit</button>
                            <a class="btn btn--radius-2 btn--blue" asp-action="Login" asp-controller="Account" asp-area="">Login</a>
                            <a class="btn btn--radius-2 btn--blue" asp-action="Index" asp-controller="Home" asp-area="">Home</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="~/Account/Register/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="~/Account/Register/vendor/select2/select2.min.js"></script>
    <script src="~/Account/Register/vendor/datepicker/moment.min.js"></script>
    <script src="~/Account/Register/vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="~/Account/Register/js/global.js"></script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>
<!-- end document-->